generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PrjectStatus {
  OPEN
  DONE
  CLOSED
}

model Project {
  id          String       @id @default(cuid())
  name        String
  guildId     String
  status      PrjectStatus @default(OPEN)
  roleId      String
  description String?
  deadline    DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  groups      Group[]      @relation("ProjectGroup")
}

model Group {
  id          String   @id @default(cuid())
  name        String
  project     Project  @relation("ProjectGroup", fields: [projectId], references: [id], onDelete: Cascade)
  description String?
  projectId   String
  roleId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
