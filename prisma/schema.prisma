generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PrjectStatus {
  OPEN
  DONE
  CLOSED
}

model Project {
  id          String       @id @default(cuid())
  name        String
  guildId     String
  status      PrjectStatus @default(OPEN)
  roleId      String       @unique
  description String?
  deadline    DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  groups      Group[]      @relation("ProjectGroup")
}

model Group {
  id          String    @id @default(cuid())
  name        String
  project     Project   @relation("ProjectGroup", fields: [projectId], references: [id], onDelete: Cascade)
  deadline    DateTime?
  description String?
  projectId   String
  roleId      String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tasks       Task[]    @relation("GroupTask")
}

model Task {
  id          String    @id @default(cuid())
  name        String
  description String?
  deadline    DateTime?
  userId      String
  group       Group     @relation("GroupTask", fields: [groupId], references: [id], onDelete: Cascade)
  groupId     String
}
